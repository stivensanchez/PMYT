<% if current_user.role_id == 1 %>
<h1>Listing roles</h1>

<table>
  <thead>
    <tr>
      <th>Rol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.rol %></td>
       <%# <td><%= link_to 'Edit', edit_role_path(role) %><%# </td> %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_role_path %>
<% else %>
<center>
    <div class="fadeIn derror">
    <%= image_tag ("error.png"), class: "img-rounded", height: '40', width: '40' %>
     <h1>Acceso denegado.</h1>
    </div>
  </center>
<% end %>