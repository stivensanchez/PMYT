<%- model_class = Operation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @operation.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @operation.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:maquina_id) %>:</strong></dt>
  <dd><%= @operation.maquina_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:modulo_id) %>:</strong></dt>
  <dd><%= @operation.modulo_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              operations_path, :class => 'btn btn-default'  %>
