<%- model_class = Operation -%>
<div class="well">
    <h1><center>Listado <small>Operaciones</small></center></h1>
</div>
   
 <div class="well"> 
    <%= link_to 'Nueva operacion',
            new_modulo_operation_path(@modulo),
            class: "btn btn-primary btn-lg active" %>
            
</div>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:sam) %></th>
      <th><%= model_class.human_attribute_name(:descripcion) %></th>
      <th><%= model_class.human_attribute_name(:maquina_id) %></th>
      <th><%= model_class.human_attribute_name(:video) %></th>
      <th><%= model_class.human_attribute_name(:imagen) %></th>
      <th><%= model_class.human_attribute_name(:Acciones) %></th>
    </tr>
  </thead>
  <tbody>
    <% @operations.each do |operation| %>
      <tr>
        <td><%= operation.nombre %></td>
        <td><%= operation.sam %></td>
        <td><%= operation.descripcion %></td>
        <td><%= operation.maquina_id %></td>
        <td><%= link_to('<button class="btn btn-default">ver</button>'.html_safe, operation.video.url, controls: true) %>
        <td><%=link_to('<button class="btn btn-default">ver</button>'.html_safe, operation.image.url, ) %></td>
        
        
        <td>
          <%= link_to 'Editar', 
    edit_modulo_operation_path(@modulo,operation), :class => 'btn btn-default btn-xs btn-lg active' %>
          <%= link_to 'Eliminar', 
    modulo_operation_path(@modulo,operation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger btn-lg active' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'atras', modulos_path, :class => 'btn btn-primary btn-lg active' %>
