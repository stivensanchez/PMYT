<%= simple_form_for [@modulo,@operation], :html => { :class => 'form-group' } do |f| %>
<% if @operation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@operation.errors.count, "error") %> campos obligatorios:</h2>

      <ul>
      <% @operation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-group">
  <%= f.label :Nombre %>
  <%= f.text_field :nombre, class: "form-control",         placeholder: "Ingrese el nombre" %>
</div>  
<div class="form-group">
  <%= f.label :Sam %>
  <%= f.text_field :sam, class: "form-control", placeholder: "Ingrese el sam" %>
</div>  
<div class="form-group">
  <%= f.label :Descripcion %>
  <%= f.text_area :descripcion, class: "form-control", placeholder: "Ingrese una descripcion" %>
</div>  
<div class="form-group">
    <%= f.label :Maquina %>  <br>
  <%= f.collection_select :maquina_id, @maquinas = @modulo.maquinas.all, :id, :nombre, class: "form-control", prompt: "Seleccione Maquina" %>
</div> 

 <div class="form-group">
  <%= f.label :Imagen %><br>
  <%= f.file_field :image %>
</div>

<div class="form-group">
  <%= f.label :Video %><br>
  <%= f.file_field :video %>
</div>

  <%= f.button :submit, 'Crear operaciÃ³n', :class => 'btn-primary' %>
  <%= link_to 'Cancelar', 
  modulo_operations_path(@modulo), :class => 'btn btn-default' %>
<% end %>

