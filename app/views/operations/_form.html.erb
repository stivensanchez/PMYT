<%= simple_form_for [@modulo,@operation], :html => { :class => 'form-group' } do |f| %>
<div class="form-group">
  <%= f.label :Nombre %>
  <%= f.text_field :nombre, class: "form-control",         placeholder: "Ingrese el nombre" %>
</div>  
<div class="form-group">
  <%= f.label :Sam %>
  <%= f.text_area :sam, class: "form-control", placeholder: "Ingrese el samp" %>
</div>  
<div class="form-group">
  <%= f.label :Descripcion %>
  <%= f.text_area :descripcion, class: "form-control", placeholder: "Ingrese una descripcion" %>
</div>  
<div class="form-group"
  <%= f.label :Maquina %>
  <%= f.text_field :maquina_id, class: "form-control" %>
</div>  
  

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
  modulo_operations_path(@modulo), :class => 'btn btn-default' %>
<% end %>
