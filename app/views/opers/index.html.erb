<%- model_class = Oper -%>
<div class="well">
    <h1><center>Listado <small>Operarios</small></center></h1>
</div>
    <div class="well">
        <%= link_to 'Nuevo operaria',
            new_group_oper_path(@group),
            :class => 'btn btn-primary btn-lg active' %>
</div>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tipo_doc_id) %></th>
      <th><%= model_class.human_attribute_name(:numero_documento) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:apellido) %></th>
      <th><%= model_class.human_attribute_name(:correo) %></th>
      <th><%= model_class.human_attribute_name(:telefono) %></th>

      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @opers.each do |oper| %>
      <tr>
        <td><%= link_to oper.id, oper_path(oper) %></td>
        <td><%= oper.tipo_doc_id %></td>
        <td><%= oper.numero_documento %></td>
        <td><%= oper.nombre %></td>
        <td><%= oper.apellido %></td>
        <td><%= oper.correo %></td>
        <td><%= oper.telefono %></td>
        <td>
          <%= link_to 'NIVELACION', oper_nivelations_path(oper), :class => 'btn btn-default btn-xs btn-lg active' %>
          <%= link_to 'Editar', 
                      edit_group_oper_path(@group,oper), :class => 'btn btn-default btn-xs btn-lg active' %>
          <%= link_to 'Eliminar', 
                      group_oper_path(@group,oper),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger btn-lg active' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'atras', modulos_path, :class => 'btn btn-primary btn-lg active' %>
