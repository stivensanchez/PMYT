<%= simple_form_for [@modulo,@group,@oper], :html => { :class => 'form-group' } do |f| %>
<% if @oper.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@oper.errors.count, "error") %> campos obligatorios:</h2>

      <ul>
      <% @oper.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-group">
  <%= f.label :Tipo_Documento %> <br>
  <%= f.collection_select :tipo_doc_id, TipoDoc.all, :id, :nombre, class: "form-contol", prompt: "Seleccione" %>
</div>  
<div class="form-group">
  <%= f.label :Numero_documento%>
  <%= f.text_field :numero_documento, class: "form-control", placeholder: "Ingrese el numero de documento" %>
</div>
<div class="form-group">
  <%= f.label :Nombres%>
  <%= f.text_field :nombre, class: "form-control", placeholder: "Ingrese los nombres" %>
</div>
<div class="form-group">
  <%= f.label :Apellidos%>
  <%= f.text_field :apellido, class: "form-control", placeholder: "Ingrese los apellidos" %>
</div>
<div class="form-group">
  <%= f.label :Correo%>
  <%= f.text_field :correo, class: "form-control", placeholder: "Ingrese el telefono" %>
</div>
<div class="form-group">
  <%= f.label :Telefono%>
  <%= f.text_field :telefono, class: "form-control", placeholder: "Ingrese el telefono" %>
</div>  
 

  <%= f.button :submit, 'Crear operario', :class => 'btn-primary' %>
  <%= link_to 'Cancelar',
                group_opers_path(@group), :class => 'btn btn-default' %>
                <br>
  <br><br>
<h1> Registrar Usuario </h1>
__________________________________<br>
  <%= link_to 'Usuario',
                new_user_path , :class => 'btn btn-success' %></center>
<% end %>

