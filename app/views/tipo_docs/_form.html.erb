<%= simple_form_for @tipo_doc, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nombre %>
  <%= error_span(@tipo_doc[:nombre]) %>
  <%= f.input :descripcion %>
  <%= error_span(@tipo_doc[:descripcion]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tipo_docs_path, :class => 'btn btn-default' %>
<% end %>
