<%- model_class = TipoDoc -%>
<div class="well">
  <h1><center>Tipo <small>Documento</small></center></h1>
</div>
<div class="well">
  <%= link_to 'Nuevo', new_tipo_doc_path, :class => 'btn btn-primary btn-lg active' %>
</div>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:descripcion) %></th>
      <th><%= model_class.human_attribute_name(:Acciones) %></th>
    </tr>
  </thead>
  <tbody>
    <% @tipo_docs.each do |tipo_doc| %>
      <tr>
        <td><%= tipo_doc.nombre %></td>
        <td><%= tipo_doc.descripcion %></td>
        <td>
          <%= link_to 'Editar', 
                      edit_tipo_doc_path(tipo_doc), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Eliminar', 
                      tipo_doc_path(tipo_doc),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

