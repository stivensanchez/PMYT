<%- model_class = Maquina -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @maquina.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @maquina.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:modulo_id) %>:</strong></dt>
  <dd><%= @maquina.modulo_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              maquina_path(maquina), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_maquina_path(maquina), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
  maquina_path(@maquina),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
