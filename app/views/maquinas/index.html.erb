<%- model_class = Maquina -%>
<div class="well">
    <h1><center>Listado <small>Maquinas</small></center></h1>
</div>
<div class="well">
<%= link_to t('.nuevo'),
  new_modulo_maquina_path(@modulo),
            :class => 'btn btn-primary btn-lg active' %>
</div>
  
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:descripcion) %></th>
      
      <th><%= model_class.human_attribute_name(:Acciones) %></th>
    </tr>
  </thead>
  <tbody>
    <% if @maquinas.count == 0 %>
      <tr>
        <td colspan="3">
          No hay ninguna maquina.  click en el boton de nuevo para agregar una nueva maquina.
        </td>
      </tr>
    <% else %>
    <% @maquinas.each do |maquina| %>
      <tr>
        <td><%= link_to maquina.id, maquina_path(maquina) %></td>
        <td><%= maquina.nombre %></td>
        <td><%= maquina.descripcion %></td>
        <td>
          <%= link_to 'Editar',
    edit_modulo_maquina_path(@modulo,maquina), :class => 'btn btn-default btn-xs btn-lg active' %>
          <%= link_to 'Eliminar', 
    modulo_maquina_path(@modulo,maquina),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger btn-lg active' %>
        </td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
  
  <%= link_to 'atras', modulos_path, :class => 'btn btn-primary btn-lg active' %>


