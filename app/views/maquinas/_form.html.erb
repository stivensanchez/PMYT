<%= simple_form_for [@modulo,@maquina], :html => { :class => 'form-group' } do |f| %>
<div class="form-group">
  <%= f.label :Nombre %>
  <%= f.text_field :nombre, class: "form-control", placeholder: "Ingrese el nombre" %> 
</div>
<div class="form-group">
  <%= f.label :Descripcion %>
  <%= f.text_area :descripcion, class: "form-control", placeholder: "Ingrese una descripcion" %>
</div>
<div class="form-group">
  <%= f.label :ficha_tecnica %>
  <%= f.file_field :ficha %>
</div>
<div class="form-group">
  <%= f.label :Cantidad %>
  <%= f.text_area :cantidad, class: "form-control", placeholder: "Ingrese la cantidad de maquinas" %>
</div>
  <%= f.button :submit, 'Crear maquina', :class => 'btn-primary' %>
  <%= link_to 'Cancelar', 
  modulo_maquinas_path(@modulo), :class => 'btn btn-default' %>
<% end %>
