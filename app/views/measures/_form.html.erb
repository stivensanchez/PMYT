<%= simple_form_for [@ficha,@info,@measure], :html => { :class => 'form-group' } do |f| %>
<div class="form-group">
  <%= f.label :medida %>
  <%= f.text_field :medidas, class: "form-control", placeholder: "Ingrese las medidas" %>
</div>
<div class="form-group">
  <%= f.label :talla %>
  <%= f.text_field :talla, class: "form-control", placeholder: "Ingrese una Talla" %>
</div>
<div class="form-group">
  <%= f.label :cm %>
  <%= f.text_field :cm, class: "form-control", placeholder: "Ingrese los CMS" %>
</div>
<div class="form-group">
  <%= f.label :Tolerancia %>
  <%= f.text_field :tolerancia, class: "form-control", placeholder: "Ingrese la tolerancia" %>
</div>
  
  <%= f.button :submit, 'Crear medidas', :class => 'btn-primary' %>
  <%= link_to 'Cancelar', 
                info_measures_path(@info), :class => 'btn btn-default' %>
<% end %>
