<%- model_class = Measure -%>
  <div class="well">
    <h1><center>Cuadro <small>Medidas</small></h1>
</div>
    <div class="well">
        <%= link_to t('.new', :default => t("helpers.links.new")),
  new_info_measure_path(@info),
            :class => 'btn btn-primary' %>
</div>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:medidas) %></th>
      <th><%= model_class.human_attribute_name(:tolerancia) %></th>
     
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @measures.each do |measure| %>
      <tr>
        <td><%= measure.medidas %></td>
        <td><%= measure.tolerancia %></td>
        
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_info_measure_path(@info,measure), :class => 'btn btn-default btn-xs btn-lg active' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      info_measure_path(@info,measure),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger btn-lg active' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= render 'materials/index' %>
</div>


