<%- model_class = Measure -%>
  <div class="well">
    <h1><center>Cuadro <small>Medidas</small></h1>
</div>
    <div class="well">
        <%= link_to 'Nuevo', 
  new_info_measure_path(@info),
            :class => 'btn btn-success btn-lg active' %>
</div>
<!-- buscador -->
<div class="tbusca"> 
   <%= form_tag info_measures_path(@info), :method => 'get' do %>
     <% content_tag :label do %>
        <div class="form-group">
          Buscador:
         <%= text_field_tag :search, params[:search] %>
         <%= submit_tag "Buscar", class: "btn btn-default"%>
        </div> 
     <% end %>
  <% end %>
  </div>
  <br>
  <br>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:medidas) %></th>
      <th><%= model_class.human_attribute_name(:talla) %></th>
      <th><%= model_class.human_attribute_name(:cm) %></th>
      <th><%= model_class.human_attribute_name(:tolerancia) %></th>
      <th><%= model_class.human_attribute_name(:Acciones) %></th>
    </tr>
  </thead>
  <tbody>
    <% @measures.each do |measure| %>
      <tr>
        <td><%= measure.medidas %></td>
        <td><%= measure.talla %></td>
        <td><%= measure.cm %></td>
        <td><%= measure.tolerancia %></td>
        <td><center>
         <div class="btn-group">
              <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#">
              ï¸¾</a>
              <ul class="dropdown-menu">
                <li> <%= link_to '<i class="fa fa-wrench txt-primary"></i><span> Editar</span>'.html_safe, edit_info_measure_path(@info,measure) %></li>
                <li> <%= link_to '<i class="fa fa-times txt-danger"></i><span> Eliminar</span>'.html_safe, info_measure_path(@info,measure), method: :delete, data: { confirm: 'Estas segur@?' },remote: true %></li>
              </ul>
          </div>
        </center></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'atras', fichas_path, :class => 'btn btn-success btn-lg active' %>
 <!-- Paginacion -->
<nav>
  <ul class="pager">
    <%= will_paginate @measures, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
  </ul>
</nav>
<br>
<h4><span class="label label-warning gran">Medidas Registradas: <%= @measures.count %></span></h4>
