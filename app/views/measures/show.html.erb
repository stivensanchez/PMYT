<%- model_class = Measure -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:medidas) %>:</strong></dt>
  <dd><%= @measure.medidas %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tolerancia) %>:</strong></dt>
  <dd><%= @measure.tolerancia %></dd>
  <dt><strong><%= model_class.human_attribute_name(:info_id) %>:</strong></dt>
  <dd><%= @measure.info_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
  measure_path(measure), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_measure_path(measure), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              measure_path(@measure),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
