      <b>MODULO</b>
      :
      <% @infos.each do |info| %>  
      <%= info.modulo.nombre %>
     <% end %> 
    </div>  
</div>   
       <br>
        </div> 
<div class="diez">
    <div class="list-group-item">
      <% @infos.each do |info| %>
