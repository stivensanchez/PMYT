      <b>COLOR</b>
      :
      <% @infos.each do |info| %>  
       <%= info.color %>
     <% end %> 
    </div>
</div>
      
<div class="cinco">      
    <div class="list-group-item">
      <b>TELA</b>
      :
     <% @infos.each do |info| %> 
      <%= info.tela %>
     <% end %> 
    </div>
</div>
<div class="seis">     
  <center><b>DESCRIPCION</b>
        :</center>
      
     <% @infos.each do |info| %> 
       <%= info.descripcion %>
     <% end %> 
      </div>
     
      <div class="imagen">
        <div class="pruebita">
        <% @infos.each do |info| %>
          <%= image_tag(info.image.url, height: '390', width: '707') %>
