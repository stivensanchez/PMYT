      <% end %>  
    </div>   
        
    <div class="list-group-item">
      <% @infos.each do |info| %>
         <center><%= link_to 'PIEZAS POR PRENDA', info_prendas_path(info), :class => 'btn btn-default btn-xs btn-lg active' %></center>
      <% end %>  
    </div>    
       
      <div class="list-group-item">
      <% @infos.each do |info| %>
         <center><%= link_to 'DESARROLLO', info_developments_path(info), :class => 'btn btn-default btn-xs btn-lg active' %></center>
      <% end %>  
    </div>  
</div>  
     
       <br>
      <div class="nueve">
        <% @infos.each do |info| %>  
            <%= link_to 'Editar', 
                      edit_ficha_info_path(@ficha,info), :class => 'btn btn-default btn-xs btn-lg active' %>
            <%= link_to 'Eliminar', 
            ficha_info_path(@ficha,info),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger btn-lg active' %>
       <% end %>
     </div>  
   
 
