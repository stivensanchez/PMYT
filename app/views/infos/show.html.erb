<%- model_class = Info -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:referencia) %>:</strong></dt>
  <dd><%= @info.referencia %></dd>
  <dt><strong><%= model_class.human_attribute_name(:talla) %>:</strong></dt>
  <dd><%= @info.talla %></dd>
  <dt><strong><%= model_class.human_attribute_name(:talla_promedio) %>:</strong></dt>
  <dd><%= @info.talla_promedio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:color) %>:</strong></dt>
  <dd><%= @info.color %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tela) %>:</strong></dt>
  <dd><%= @info.tela %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @info.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:especificaciones) %>:</strong></dt>
  <dd><%= @info.especificaciones %></dd>
  <dt><strong><%= model_class.human_attribute_name(:modulo_id) %>:</strong></dt>
  <dd><%= @info.modulo_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ficha_id) %>:</strong></dt>
  <dd><%= @info.ficha_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              info_path(info), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_info_path(info), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              info_path(@info),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
