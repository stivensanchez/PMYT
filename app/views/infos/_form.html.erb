<%= simple_form_for [@ficha,@info], :html => { :class => 'form-group' } do |f| %>
<div class="form-group">
  <%= f.label :Referencia %>
  <%= f.text_field :referencia, class: "form-control" %>
</div>  
<div class="form-group">
  <%= f.label :Talla %>
  <%= f.text_field :talla, class: "form-control",         placeholder: "Ingrese la talla" %>
</div>
<div class="form-group">
  <%= f.label :Talla_promedio %>
  <%= f.text_field :talla_promedio, class: "form-control",         placeholder: "Ingrese la talla promedio" %>
</div>
<div class="form-group">
  <%= f.label :Color %>
  <%= f.text_field :color, class: "form-control",         placeholder: "Ingrese el color" %>
</div>
<div class="form-group">
  <%= f.label :Tela %>
  <%= f.text_field :tela, class: "form-control",         placeholder: "Ingrese la tela" %>
</div>
<div class="form-group">
  <%= f.label :Descripcion %>
  <%= f.text_area :descripcion, class: "form-control",         placeholder: "Ingrese una descripcion" %>
</div>
<div class="form-group">
  <%= f.label :Especificaciones %>
  <%= f.text_area :especificaciones, class: "form-control",         placeholder: "Ingrese las especificaciones" %>
</div>
<div class="form-group">
  <%= f.label :Modulo %>
  <%= f.text_field :modulo_id, class: "form-control" %>
</div>  

<div class="form-group">
  <%= f.file_field :image %>
</div>  
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
  ficha_infos_path(@ficha), :class => 'btn btn-default' %>
<% end %>
