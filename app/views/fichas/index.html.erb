<%- model_class = Ficha -%>
<div class="page-header">
    <h1><center>Fichas Tecnicas</center></h1>
</div>
<div class="well">
    <%= link_to 'Nueva Ficha',
            new_ficha_path,
            :class => 'btn btn-primary btn-lg active' %>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <br>
    <tr>
      <th><%= model_class.human_attribute_name(:referencia) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fichas.each do |ficha| %>
      <tr>
        <td><%= link_to ficha.referencia, ficha_infos_path(ficha), :class => 'btn btn-default btn-xs btn-lg active' %></td>
        <td><%= ficha.nombre %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ficha_path(ficha), :class => 'btn btn-default btn-xs btn-lg active' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ficha_path(ficha),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger btn-lg active' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


