<%= simple_form_for @ficha, :html => { :class => 'form-group' } do |f| %>
<div class="form-group">
  <%= f.label :Nombre %>
  <%= f.text_field :referencia, class: "form-control", placeholder: "Ingrese la referencia" %>
</div> 
<div class="form-group">
  <%= f.label :Nombre %>
  <%= f.text_field :nombre, class: "form-control", placeholder: "Ingrese el nombre" %>
</div>  

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                fichas_path, :class => 'btn btn-default' %>
<% end %>
