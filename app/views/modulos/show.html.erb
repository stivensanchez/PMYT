<%- model_class = Modulo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @modulo.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @modulo.descripcion %></dd>
   <% if can? :update, @modulo %>
                        <%= link_to t('.Editar'),
                                      edit_area_path(@modulo), :class => 'btn btn-default' %>
                     <% end %>
                     <% if can? :destroy, @modulo %>                 
                        <%= link_to t('.Eliminar'),
                                      area_path(@modulo),
                                      :method => 'delete',
                                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                      :class => 'btn btn-danger' %>
                     <% end %>    
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              modulos_path, :class => 'btn btn-default'  %>