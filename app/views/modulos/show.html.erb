<%- model_class = Modulo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @modulo.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @modulo.descripcion %></dd>
</dl>

<%= link_to 'Atras', 
              modulos_path, :class => 'btn btn-default'  %>
<%= link_to 'Editar', 
              edit_modulo_path(@modulo), :class => 'btn btn-default' %>
<%= link_to t('.Eliminar', 
              modulo_path(@modulo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
