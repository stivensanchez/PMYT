</div>
    <div class="well">
        <%= link_to 'Nuevo',
        new_termination_path,
            :class => 'btn btn-primary' %>
</div>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:operation_id) %></th>
      <th><%= model_class.human_attribute_name(:sam) %></th>
      <th><%= model_class.human_attribute_name(:maquina) %></th>
      <th><%= model_class.human_attribute_name(:calibre_aguja) %></th>
      <th><%= model_class.human_attribute_name(:ppp) %></th>
      <th><%= model_class.human_attribute_name(:margen_costura) %></th>
      <th><%= model_class.human_attribute_name(:guia_accesorios) %></th>
      <th><%= model_class.human_attribute_name(:observaciones) %></th>
      <th><%= model_class.human_attribute_name(:imagen)%></th>
      <th><%= model_class.human_attribute_name(:Acciones) %></th>
    </tr>
  </thead>
  <tbody>
    <% Termination.all.each do |termination| %>
      <tr>
        <td><%= link_to termination.id, termination_path(termination) %></td>
        <td><%= termination.operation_id %></td>
        <td><%= termination.sam %></td>
        <td><%= termination.maquina %></td>
        <td><%= termination.calibre_aguja %></td>
        <td><%= termination.ppp %></td>
        <td><%= termination.margen_costura %></td>
        <td><%= termination.guia_accesorios %></td>
        <td><%= termination.observaciones %></td>
        <td><%= termination.imagen %></td>
        <td>
          <%= link_to 'Editar',
                      edit_termination_path(termination), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Eliminar', 
                      termination_path(termination),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


