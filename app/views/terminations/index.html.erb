<%- model_class = Termination -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:operation_id) %></th>
      <th><%= model_class.human_attribute_name(:xamp) %></th>
      <th><%= model_class.human_attribute_name(:maquina) %></th>
      <th><%= model_class.human_attribute_name(:calibre_aguja) %></th>
      <th><%= model_class.human_attribute_name(:ppp) %></th>
      <th><%= model_class.human_attribute_name(:margen_costura) %></th>
      <th><%= model_class.human_attribute_name(:guia_accesorios_string) %></th>
      <th><%= model_class.human_attribute_name(:observaciones) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @terminations.each do |termination| %>
      <tr>
        <td><%= link_to termination.id, termination_path(termination) %></td>
        <td><%= termination.operation_id %></td>
        <td><%= termination.xamp %></td>
        <td><%= termination.maquina %></td>
        <td><%= termination.calibre_aguja %></td>
        <td><%= termination.ppp %></td>
        <td><%= termination.margen_costura %></td>
        <td><%= termination.guia_accesorios_string %></td>
        <td><%= termination.observaciones %></td>
        <td><%=l termination.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_termination_path(termination), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      termination_path(termination),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_termination_path,
            :class => 'btn btn-primary' %>
