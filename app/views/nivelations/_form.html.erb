<%= simple_form_for [@oper,@nivelation,@development], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :sam %>
  <%= error_span(@nivelation[:sam]) %>
  <%= f.input :tiempo_real %>
  <%= error_span(@nivelation[:tiempo_real]) %>
  <%= f.input :desempeño %>
  <%= error_span(@nivelation[:desempeño]) %>
  <%= f.input :comentario %>
  <%= error_span(@nivelation[:comentario]) %>
  <%= f.input :oper_id %>
  <%= error_span(@nivelation[:oper_id]) %>
  <%= f.input :development_id %>
  <%= error_span(@nivelation[:development_id]) %>
  <%= f.input :ensamble_id %>
  <%= error_span(@nivelation[:ensamble_id]) %>
  <%= f.input :termination_id %>
  <%= error_span(@nivelation[:termination_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                oper_nivelations_path(@oper), :class => 'btn btn-default' %>
<% end %>
  
