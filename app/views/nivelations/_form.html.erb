<%= simple_form_for [@oper,@nivelation], :html => { :class => 'form-horizontal' } do |f| %>
 
  <%= f.input :desempeño %>
  <%= error_span(@nivelation[:desempeño]) %>
  <%= f.input :comentario %>
  <%= error_span(@nivelation[:comentario]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                oper_nivelations_path(@oper), :class => 'btn btn-default' %>
<% end %>
