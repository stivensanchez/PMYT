<%- model_class = Nivelation -%>
<div class="well">
<h1><center>Listado <small>Nivelación</small></center></h1>
</div>
<div class="well">
  <%= link_to t('.Nueva Nivelacion'), 
            new_oper_nivelation_path(@oper),
            :class => 'btn btn-success btn-lg active' %>
            
 </div>          
            
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:operación) %></th>
      <th><%= model_class.human_attribute_name(:tiempo_sam) %></th>
      <th><%= model_class.human_attribute_name(:tiempo_real) %></th>
      <th><%= model_class.human_attribute_name(:desempeño) %></th>
      <th><%= model_class.human_attribute_name(:comentario) %></th>
      <th><%= model_class.human_attribute_name(:Opciones) %></th>
    </tr>
  </thead>
  <tbody>
    <% @nivelations.each do |nivelation| %>
      <tr>
        
        <td><%= nivelation.development_id %></td>
        <td><%= nivelation.tiempo_sam %></td>
        <td><%= nivelation.tiempo_real %></td>
        <td><%= nivelation.desempeño %></td>
        <td><%= nivelation.comentario %></td>
        <td><center> 
        <div class="btn-group">
            <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#">
            ︾</a>
            <ul class="dropdown-menu">
              <li> <%= link_to '<i class="fa fa-wrench txt-primary"></i><span> Editar</span>'.html_safe, edit_oper_nivelation_path(@oper,nivelation) %></li>
              <li> <%= link_to '<i class="fa fa-times txt-danger"></i><span> Eliminar</span>'.html_safe, oper_nivelation_path(@oper,nivelation), method: :delete, data: { confirm: 'Estas segur@?' },remote: true %></li>
            </ul>
        </div>
        </center></td>
      </tr>
    <% end %>
  </tbody>
</table>

 <%= link_to 'atras', modulos_path, :class => 'btn btn-success btn-lg active' %>
 <!-- Paginacion -->
<nav>
  <ul class="pager">
    <%= will_paginate @nivelations, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
  </ul>
</nav>
<br>
<h4><span class="label label-warning gran">operaciones en nivelacion: <%= @nivelations.count %></span></h4>

