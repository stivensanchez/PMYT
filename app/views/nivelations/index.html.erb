<%- model_class = Nivelation -%>
<div class="well">
  <h1><center>Listado <small>Nivelaciones</small></center></h1>
</div>
<div class="well">
    <%= link_to'Nueva nivelacion',
    new_oper_nivelation_path(@oper),
    :class => 'btn btn-primary btn-lg active' %>
</div>

<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:oper_id) %></th>
      <th><%= model_class.human_attribute_name(:desempeño) %></th>
      <th><%= model_class.human_attribute_name(:comentario) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @nivelations.each do |nivelation| %>
      <tr>
        <td><%= nivelation.oper.nombre %></td>
        <td><%= nivelation.desempeño %></td>
        <td><%= nivelation.comentario %></td>
        <td>
          <%= link_to 'Editar', 
                      edit_oper_nivelation_path(@oper,nivelation), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Eliminar', 
                      oper_nivelation_path(@oper,nivelation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'atras', modulos_path, :class => 'btn btn-primary btn-lg active' %>