          <% elsif nivelation.desempeño.to_i <= 80 && nivelation.desempeño.to_i > 50  %>
          <%= image_tag("triste.gif",size: "40x40") %>
          <% elsif nivelation.desempeño.to_i > 80 && nivelation.desempeño.to_i <= 100  %>
          <%= image_tag("penguin.gif",size: "40x40") %>
          <% end %>
         </td>
        <% if current_user.rol.id == 2 %> 
         </tr>
        <% end %>
       
        </tr>
      <% end %>
    <% end %>
    
    
    <% @nivelations = @terminations.all.each do |nivelation| %>
    <!-- condicional operaria development con operaria nivelation -->
       <% if nivelation.oper_id == @oper.id  %>
