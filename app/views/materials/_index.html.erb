<%- model_class = Material -%>
<div class="well">
    <h1><center>Materiales <small>Insumos</small></center></h1>
</div>
    <div class="well">
        <%= link_to 'Nuevo', 
            new_info_material_path(@info),
            class: 'btn btn-primary btn-lg active' %>
</div>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Nombre_Material) %></th>
      <th><%= model_class.human_attribute_name(:Cantidad_Consumo) %></th>
      <th><%= model_class.human_attribute_name(:Observaciones) %></th>
       <th><%= model_class.human_attribute_name(:Acciones) %></th>
  </thead>
  <tbody>
    <% @materials = @info.materials.all.each do |material| %>
      <tr>
        <td><%= material.nombre %></td>
        <td><%= material.cantidad %></td>
        <td><%= material.observaciones %></td>
        <td>
          <%= link_to 'Editar', 
                      edit_info_material_path(@info,material), :class => 'btn btn-default btn-xs btn-lg active' %>
          <%= link_to 'Eliminar',
                      info_material_path(@info,material),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger btn-lg active' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


