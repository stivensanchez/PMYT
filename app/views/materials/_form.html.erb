<%= simple_form_for [@ficha,@info,@material], :html => { :class => 'form-group' } do |f| %>
<% if @material.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@material.errors.count, "error") %> campos obligatorios:</h2>

      <ul>
      <% @material.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-group">
  <%= f.label :Nombre_Insumo %>
  <%= f.text_field :nombre, class: "form-control", placeholder: "Ingrese el nombre del consumo" %>
</div>
<div class="form-group">
  <%= f.label :Cantidad_Consumo %>
  <%= f.text_field :cantidad, class: "form-control", placeholder: "Ingrese la cantidad de consumo" %>
</div>
<div class="form-group">
  <%= f.label :Observaciones %>
  <%= f.text_field :observaciones, class: "form-control", placeholder: "Ingrese las observaciones" %>
</div>
  <%= f.button :submit,  'Crear materiales', :class => 'btn-primary' %>
  <%= link_to 'Cancelar', 
                info_measures_path(@info), :class => 'btn btn-default' %>
<% end %>
