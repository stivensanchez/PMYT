<%= simple_form_for @material, :html => { :class => 'form-group' } do |f| %>
<div class="form-group">
  <%= f.label :Nombre%>
  <%= f.text_field :nombre, class: "form-control",         placeholder: "Ingrese el nombre del insumo" %>
</div>
<div class="form-group">
  <%= f.label :Cantidad %>
  <%= f.text_field :cantidad, class: "form-control",         placeholder: "Ingrese la cantidad de consumo" %>
</div>
<div class="form-group">
  <%= f.label :Observaciones %>
  <%= f.text_area :observaciones, class: "form-control", placeholder: "Ingrese las observaciones" %>
</div>  
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                materials_path, :class => 'btn btn-default' %>
<% end %>
