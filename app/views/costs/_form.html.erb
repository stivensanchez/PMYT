  <%= error_span(@cost[:lote]) %>
  <%= f.input :cant %>
  <%= error_span(@cost[:cant]) %>
  <%= f.input :und %>
  <%= error_span(@cost[:und]) %>
  <%= f.input :detalle %>
  <%= error_span(@cost[:detalle]) %>
  <%= f.input :vr_unit %>
