<%- model_class = Manual -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:administrador) %>:</strong></dt>
  <dd><%= @manual.administrador %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instructor) %>:</strong></dt>
  <dd><%= @manual.instructor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:operaria) %>:</strong></dt>
  <dd><%= @manual.operaria %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              manuals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_manual_path(@manual), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              manual_path(@manual),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
