<%- model_class = Prenda -%>
<div class="well">
    <h1><center>Piezas <small>Prenda</small></center></h1>
</div>
    <div class="well">
        <%= link_to 'Nuevo', 
            new_info_prenda_path(@info),
            :class => 'btn btn-primary' %>
</div>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:cantidad) %></th>
      <th><%= model_class.human_attribute_name(:observaciones) %></th>
       <th><%= model_class.human_attribute_name(:Acciones) %></th>
    </tr>
  </thead>
  <tbody>
    <% @prendas.each do |prenda| %>
      <tr>
        <td><%= prenda.nombre %></td>
        <td><%= prenda.cantidad %></td>
        <td><%= prenda.observaciones %></td>
        <td>
          <%= link_to 'Editar', 
                      edit_info_prenda_path(@info,prenda), :class => 'btn btn-default btn-xs btn-lg active' %>
          <%= link_to 'Eliminar', 
                      info_prenda_path(@info,prenda),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger btn-lg active' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


