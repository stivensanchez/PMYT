<%- model_class = Group -%>
<div class="well">
    <h1><center>Listado <small>Grupos</small></center></h1>
</div>
    <div class="well">
      <%= link_to 'Nuevo Grupo',
  new_modulo_group_path(@modulo),
            :class => 'btn btn-primary btn-lg active' %>
</div>
<div class="linkex">
  <strong class="txt-success"><a><%= link_to "Descargar tabla en ", modulo_groups_path(format: "xls") %></a></strong>
  <%= link_to image_tag("excel.png", :size => "20x20"), modulo_groups_path(format: "xls"), class: 'btn btn-default' %>
</div>
<br>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:num_ficha) %></th>
      <th><%= model_class.human_attribute_name(:Operarias) %></th>
  
       <th><%= model_class.human_attribute_name(:Acciones) %></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.nombre %></td>
        <td><%= group.num_ficha %></td>
        <td><%= link_to 'operaria (' + group.opers.count.to_s+ ')',
    group_opers_path(group), :class => 'btn btn-default btn-xs btn-lg active' %></td>
        <td>
          <%= link_to 'Editar', 
    edit_modulo_group_path(@modulo,group), :class => 'btn btn-default btn-xs btn-lg active' %>
          <%= link_to 'Eliminar', 
          modulo_group_path(@modulo,group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger btn-lg active' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'atras', modulos_path, :class => 'btn btn-primary btn-lg active' %>
