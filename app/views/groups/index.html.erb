<%- model_class = Group -%>
<div class="well">
    <h1><center>Listado <small>Grupos</small></center></h1>
</div>
    <div class="well">
      <%= link_to 'Nuevo Grupo',
  new_modulo_group_path(@modulo),
            :class => 'btn btn-success btn-lg active' %>
</div>
<!-- buscador -->
<div class="tbusca"> 
   <%= form_tag modulo_groups_path(@modulo), :method => 'get' do %>
     <% content_tag :label do %>
        <div class="form-group">
          Buscador:
         <%= text_field_tag :search, params[:search] %>
         <%= submit_tag "Buscar", class: "btn btn-default"%>
        </div> 
     <% end %>
  <% end %>
</div>
<!-- Descargar en formato xls (excel) -->
<div class="linkex">
  <strong class="txt-success"><a><%= link_to "Descargar tabla en ", modulo_groups_path(format: "xls") %></a></strong>
  <%= link_to image_tag("excel.png", :size => "20x20"), modulo_groups_path(format: "xls"), class: 'btn btn-default' %>
</div>
<br>
<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><center><%= model_class.human_attribute_name(:nombre) %></center></th>
      <th><center><%= model_class.human_attribute_name(:num_ficha) %></center></th>
      <th><center><%= model_class.human_attribute_name(:Operarias) %></center></th>
      <th><center><%= model_class.human_attribute_name(:Acciones) %></center></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><center><%= group.nombre %></center></td>
        <td><center><%= group.num_ficha %></center></td>
        <td><center><%= link_to 'operaria (' + group.opers.count.to_s+ ')',
    group_opers_path(group), :class => 'btn btn-default btn-xs btn-lg active' %></center></td>
        <td><center>
          <div class="btn-group">
              <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#">
              ï¸¾</a>
              <ul class="dropdown-menu">
                <li> <%= link_to '<i class="fa fa-wrench txt-primary"></i><span> Editar</span>'.html_safe, edit_modulo_group_path(@modulo,group) %></li>
                <li> <%= link_to '<i class="fa fa-times txt-danger"></i><span> Eliminar</span>'.html_safe, modulo_group_path(@modulo,group), method: :delete, data: { confirm: 'Estas segur@?' },remote: true %></li>
              </ul>
          </div>
        </center></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'atras', modulos_path, :class => 'btn btn-primary btn-lg active' %>

<!-- Paginacion -->
<nav>
  <ul class="pager">
    <%= will_paginate @groups, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
  </ul>
</nav>
<br>
<span class="label label-warning gran">Grupos Registrados: <%= @groups.count %></span>

